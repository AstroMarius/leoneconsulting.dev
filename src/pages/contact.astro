---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contatti - Leone Consulting" description="Contattaci per discutere del tuo progetto. Siamo pronti ad aiutarti a trasformare le tue idee in realtà.">
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-20 px-6 bg-gradient-to-br from-primary-50 to-white">
      <div class="container mx-auto">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">Contattaci</h1>
          <p class="text-xl text-gray-600 leading-relaxed">
            Hai un progetto in mente o vuoi semplicemente fare una chiacchierata? 
            Compila il form o scrivici direttamente.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="py-20 px-6">
      <div class="container mx-auto">
        <div class="max-w-6xl mx-auto">
          <div class="grid md:grid-cols-2 gap-12">
            <!-- Contact Info -->
            <div>
              <h2 class="text-3xl font-bold text-gray-900 mb-8">Informazioni di Contatto</h2>
              
              <div class="space-y-6 mb-12">
                <div class="flex items-start space-x-4">
                  <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-bold text-gray-900 mb-1">Email</h3>
                    <a href="mailto:info@leoneconsulting.dev" class="text-primary-600 hover:text-primary-700 transition-colors">
                      info@leoneconsulting.dev
                    </a>
                  </div>
                </div>

                <div class="flex items-start space-x-4">
                  <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-bold text-gray-900 mb-1">Website</h3>
                    <p class="text-gray-600">leoneconsulting.dev</p>
                  </div>
                </div>

                <div class="flex items-start space-x-4">
                  <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-bold text-gray-900 mb-1">Disponibilità</h3>
                    <p class="text-gray-600">Lun - Ven: 9:00 - 18:00</p>
                    <p class="text-gray-600 text-sm">Risposta entro 24 ore</p>
                  </div>
                </div>
              </div>

              <div class="bg-primary-50 p-6 rounded-xl">
                <h3 class="text-xl font-bold text-gray-900 mb-4">Consulenza Gratuita</h3>
                <p class="text-gray-600 mb-4">
                  Offriamo una prima consulenza gratuita di 30 minuti per discutere del tuo progetto 
                  e valutare insieme le soluzioni migliori.
                </p>
                <p class="text-gray-600">
                  Nessun impegno, solo un'opportunità per conoscerci e capire se possiamo aiutarti.
                </p>
              </div>
            </div>

            <!-- Contact Form -->
            <div class="bg-white p-8 rounded-xl shadow-lg">
              <h2 class="text-3xl font-bold text-gray-900 mb-8">Invia un Messaggio</h2>
              
              <form id="contact-form" class="space-y-6">
                <div>
                  <label for="name" class="block text-sm font-semibold text-gray-900 mb-2">
                    Nome *
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
                    placeholder="Il tuo nome"
                  />
                </div>

                <div>
                  <label for="email" class="block text-sm font-semibold text-gray-900 mb-2">
                    Email *
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
                    placeholder="tua.email@esempio.com"
                  />
                </div>

                <div>
                  <label for="company" class="block text-sm font-semibold text-gray-900 mb-2">
                    Azienda
                  </label>
                  <input
                    type="text"
                    id="company"
                    name="company"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
                    placeholder="Nome azienda (opzionale)"
                  />
                </div>

                <div>
                  <label for="service" class="block text-sm font-semibold text-gray-900 mb-2">
                    Servizio di Interesse
                  </label>
                  <select
                    id="service"
                    name="service"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
                  >
                    <option value="">Seleziona un servizio</option>
                    <option value="ai">AI Engineering</option>
                    <option value="datascience">Data Science</option>
                    <option value="development">Sviluppo Software</option>
                    <option value="consulting">Consulenza IT</option>
                    <option value="other">Altro</option>
                  </select>
                </div>

                <div>
                  <label for="message" class="block text-sm font-semibold text-gray-900 mb-2">
                    Messaggio *
                  </label>
                  <textarea
                    id="message"
                    name="message"
                    required
                    rows="6"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all resize-none"
                    placeholder="Raccontaci del tuo progetto..."
                  ></textarea>
                </div>

                <div class="flex items-start">
                  <input
                    type="checkbox"
                    id="privacy"
                    name="privacy"
                    required
                    class="w-4 h-4 text-primary-600 border-gray-300 rounded focus:ring-primary-500 mt-1"
                  />
                  <label for="privacy" class="ml-3 text-sm text-gray-600">
                    Acconsento al trattamento dei miei dati personali secondo la privacy policy *
                  </label>
                </div>

                <button
                  type="submit"
                  class="w-full px-8 py-4 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-all transform hover:scale-105 font-semibold shadow-lg"
                >
                  Invia Messaggio
                </button>

                <!-- Success/Error Messages -->
                <div id="form-message" class="hidden p-4 rounded-lg"></div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-20 px-6 bg-gray-50">
      <div class="container mx-auto">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-4xl font-bold text-gray-900 mb-12 text-center">Domande Frequenti</h2>
          
          <div class="space-y-6">
            <div class="bg-white p-6 rounded-xl shadow-md">
              <h3 class="text-xl font-bold text-gray-900 mb-3">Quali sono i tempi di risposta?</h3>
              <p class="text-gray-600">
                Ci impegniamo a rispondere a tutte le richieste entro 24 ore lavorative. 
                Per questioni urgenti, non esitare a specificarlo nel messaggio.
              </p>
            </div>

            <div class="bg-white p-6 rounded-xl shadow-md">
              <h3 class="text-xl font-bold text-gray-900 mb-3">Come funziona la consulenza gratuita?</h3>
              <p class="text-gray-600">
                La consulenza gratuita è una call di 30 minuti dove discutiamo del tuo progetto, 
                delle tue esigenze e valutiamo insieme le possibili soluzioni. Nessun impegno richiesto.
              </p>
            </div>

            <div class="bg-white p-6 rounded-xl shadow-md">
              <h3 class="text-xl font-bold text-gray-900 mb-3">Lavorate anche su progetti piccoli?</h3>
              <p class="text-gray-600">
                Sì, lavoriamo su progetti di ogni dimensione. Che tu abbia bisogno di una consulenza 
                di poche ore o di un progetto complesso di mesi, siamo qui per aiutarti.
              </p>
            </div>

            <div class="bg-white p-6 rounded-xl shadow-md">
              <h3 class="text-xl font-bold text-gray-900 mb-3">Offrite supporto post-progetto?</h3>
              <p class="text-gray-600">
                Assolutamente sì. Offriamo pacchetti di supporto e manutenzione personalizzati 
                per garantire il funzionamento ottimale delle soluzioni che sviluppiamo.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const messageDiv = document.getElementById('form-message');

  function sanitizeInput(input: string): string {
    const div = document.createElement('div');
    div.textContent = input;
    return div.innerHTML;
  }

  let submissionCount = 0;
  let lastSubmissionTime = 0;
  const MAX_SUBMISSIONS = 3;
  const RATE_LIMIT_WINDOW = 60000;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const now = Date.now();
    if (now - lastSubmissionTime > RATE_LIMIT_WINDOW) {
      submissionCount = 0;
    }
    
    if (submissionCount >= MAX_SUBMISSIONS) {
      messageDiv?.classList.remove('hidden', 'bg-green-100', 'text-green-800');
      messageDiv?.classList.add('bg-red-100', 'text-red-800');
      messageDiv!.textContent = 'Troppi tentativi. Attendi un minuto prima di riprovare.';
      return;
    }
    
    // Show loading state
    const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
    const originalText = submitButton.textContent;
    submitButton.textContent = 'Invio in corso...';
    submitButton.disabled = true;

    const formData = new FormData(form);
    const sanitizedData = {
      name: sanitizeInput(formData.get('name') as string),
      email: sanitizeInput(formData.get('email') as string),
      company: sanitizeInput(formData.get('company') as string || ''),
      service: sanitizeInput(formData.get('service') as string || ''),
      message: sanitizeInput(formData.get('message') as string)
    };

    if (!sanitizedData.email.match(/^[^\s@]+@[^\s@]+\.[^\s@]+$/)) {
      messageDiv?.classList.remove('hidden', 'bg-green-100', 'text-green-800');
      messageDiv?.classList.add('bg-red-100', 'text-red-800');
      messageDiv!.textContent = 'Email non valida.';
      submitButton.textContent = originalText;
      submitButton.disabled = false;
      return;
    }
    
    submissionCount++;
    lastSubmissionTime = now;
    
    try {
      const response = await fetch('/api/contact', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(sanitizedData)
      });

      if (!response.ok) {
        throw new Error('Failed to send email');
      }

      messageDiv?.classList.remove('hidden', 'bg-red-100', 'text-red-800');
      messageDiv?.classList.add('bg-green-100', 'text-green-800');
      messageDiv!.textContent = 'Messaggio inviato con successo! Ti risponderemo presto.';
      
      form.reset();

      // Hide message after 5 seconds
      setTimeout(() => {
        messageDiv?.classList.add('hidden');
      }, 5000);
    } catch (error) {
      console.error('Error:', error);
      messageDiv?.classList.remove('hidden', 'bg-green-100', 'text-green-800');
      messageDiv?.classList.add('bg-red-100', 'text-red-800');
      messageDiv!.textContent = 'Errore nell\'invio del messaggio. Riprova più tardi.';
    } finally {
      submitButton.textContent = originalText;
      submitButton.disabled = false;
    }
  });
</script>
