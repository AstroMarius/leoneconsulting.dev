---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import PackageCard from '../../components/PackageCard.astro';
import type { Package } from '../../types/package';

// Import packages (English versions)
import techAudit from '../../../company/packages/tech-audit.en.json';
import mvpSprint from '../../../company/packages/mvp-sprint.en.json';
import dataPipeline from '../../../company/packages/data-pipeline.en.json';

const packages: Package[] = [
  techAudit as Package,
  mvpSprint as Package,
  dataPipeline as Package,
];
---

<Layout 
  title="AI, MVP and Data Pipeline Packages | Leone Consulting" 
  description="Choose the package that matches your stage: Tech Audit, MVP Sprint or Data Pipeline, each with defined scope, timeline and measurable deliverables."
>
  <Header />
  
  <main>
    <!-- Hero -->
    <section class="pt-32 pb-16 bg-gradient-to-b from-white to-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto">
          <h1 class="text-5xl font-bold text-gray-900 mb-6">
            Service Packages
          </h1>
          <p class="text-xl text-gray-600 mb-8">
            Clear pricing, defined deliverables, measurable results. 
            No surprises, just value. Typical ranges: Audit from CHF 2,700, MVP Sprint CHF 5,500-13,000, Data Pipeline CHF 6,500-16,000.
          </p>
        </div>
      </div>
    </section>

    <!-- Packages Grid -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {packages.map(pkg => (
            <PackageCard package={pkg} />
          ))}
        </div>
      </div>
    </section>

    <!-- Package Details -->
    {packages.map((pkg, index) => (
      <section class={`py-20 ${index % 2 === 0 ? 'bg-gray-50' : 'bg-white'}`} id={pkg.slug}>
        <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
          <!-- Header -->
          <div class="text-center mb-12">
            <h2 class="text-4xl font-bold text-gray-900 mb-4">
              {pkg.title}
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              {pkg.tagline}
            </p>
            <div class="mt-6">
              <span class="inline-flex items-center px-6 py-3 bg-primary-100 text-primary-900 rounded-full font-bold text-2xl">
                {pkg.price?.display || 'Contact for pricing'}
              </span>
            </div>
          </div>

          <!-- Who it's for -->
          <div class="mb-12">
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Who it's for</h3>
            <ul class="space-y-3">
              {pkg.forWhom.bullets.map(bullet => (
                <li class="flex items-start">
                  <svg class="w-6 h-6 text-primary-600 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="text-gray-700">{bullet}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- Deliverables -->
          <div class="mb-12">
            <h3 class="text-2xl font-bold text-gray-900 mb-6">What you receive</h3>
            <div class="space-y-6">
              {pkg.deliverables.items.map(item => (
                <div class="bg-white p-6 rounded-xl shadow-md border border-gray-100">
                  <div class="flex items-start justify-between mb-2">
                    <h4 class="text-lg font-bold text-gray-900">{item.name}</h4>
                    {item.format && (
                      <span class="text-sm bg-primary-100 text-primary-800 px-3 py-1 rounded-full font-medium">
                        {item.format}
                      </span>
                    )}
                  </div>
                  <p class="text-gray-600 leading-relaxed">{item.description}</p>
                </div>
              ))}
            </div>
          </div>

          <!-- Requirements -->
          {pkg.requirements && pkg.requirements.items.length > 0 && (
            <div class="mb-12">
              <h3 class="text-2xl font-bold text-gray-900 mb-4">What you need to provide</h3>
              <ul class="space-y-2">
                {pkg.requirements.items.map((req: string) => (
                  <li class="flex items-start">
                    <span class="text-primary-600 mr-3">â€¢</span>
                    <span class="text-gray-700">{req}</span>
                  </li>
                ))}
              </ul>
            </div>
          )}

          <!-- Timeline -->
          <div class="mb-12">
            <h3 class="text-2xl font-bold text-gray-900 mb-4">Timeline</h3>
            <div class="bg-primary-50 rounded-lg p-6 border border-primary-200">
              <div class="text-3xl font-bold text-primary-900 mb-2">
                {pkg.timeline.duration}
              </div>
              <p class="text-gray-700">{pkg.timeline.breakdown}</p>
            </div>
          </div>

          <!-- FAQ -->
          {pkg.faq && pkg.faq.length > 0 && (
            <div class="mb-12">
              <h3 class="text-2xl font-bold text-gray-900 mb-6">Frequent Questions</h3>
              <div class="space-y-4">
                {pkg.faq.map((item) => (
                  <details class="group bg-white rounded-lg shadow-md border border-gray-200">
                    <summary class="flex items-center justify-between cursor-pointer p-6 text-lg font-semibold text-gray-900 list-none">
                      <span>{item.question}</span>
                      <svg 
                        class="w-6 h-6 text-primary-600 transition-transform group-open:rotate-180" 
                        fill="none" 
                        stroke="currentColor" 
                        viewBox="0 0 24 24"
                      >
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                      </svg>
                    </summary>
                    <div class="px-6 pb-6 pt-2 text-gray-700 border-t border-gray-100">
                      {item.answer}
                    </div>
                  </details>
                ))}
              </div>
            </div>
          )}

          <!-- CTA -->
          <div class="text-center pt-8 border-t border-gray-200">
            <a
              href="/en/booking"
              class="inline-flex items-center px-8 py-4 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors shadow-lg"
            >
              Book Discovery Call
              <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </a>
          </div>
        </div>
      </section>
    ))}

    <!-- Final CTA -->
    <section class="py-20 bg-primary-600 text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold mb-4">
          Not sure which package to choose?
        </h2>
        <p class="text-xl text-primary-100 mb-8">
          Book a free 30-minute call to discuss your needs and find the best solution.
        </p>
        <a
          href="/en/booking"
          class="inline-flex items-center px-8 py-4 bg-white text-primary-600 font-semibold rounded-lg hover:bg-gray-100 transition-colors"
        >
          Book Discovery Call
          <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
      </div>
    </section>

  </main>

  <Footer />
</Layout>
