---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import CaseStudyCard from '../../components/CaseStudyCard.astro';
import type { CaseStudy } from '../../types/case-study';

// Import case studies (same data, translations handled in component if needed)
import dashboardOps from '../../../company/case-studies/dashboard-kpi-operations.json';
import aiClassifier from '../../../company/case-studies/prototipo-ai-classificazione.json';
import ecommercePipeline from '../../../company/case-studies/pipeline-analytics-ecommerce.json';
import dashboardMfg from '../../../company/case-studies/dashboard-kpi-manufacturing.json';

const allCaseStudies: CaseStudy[] = [
  dashboardOps as CaseStudy,
  aiClassifier as CaseStudy,
  ecommercePipeline as CaseStudy,
  dashboardMfg as CaseStudy,
].filter(cs => cs.published);
---

<Layout 
  title="Portfolio - Leone Consulting" 
  description="Case studies with real metrics. Data engineering, rapid prototyping, technical audits for SMEs and startups."
>
  <Header />
  
  <main>
    <!-- Hero -->
    <section class="pt-32 pb-16 bg-gradient-to-b from-white to-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto">
          <h1 class="text-5xl font-bold text-gray-900 mb-6">
            Concrete Results
          </h1>
          <p class="text-xl text-gray-600 mb-8">
            Case studies with real numbers, not just slides.
            Every project has measurable metrics.
          </p>
          <a
            href="/en/booking"
            class="inline-flex items-center px-8 py-4 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors shadow-lg"
          >
            Book Discovery Call
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
        </div>
      </div>
    </section>

    <!-- Case Studies Grid -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {allCaseStudies.map(caseStudy => (
            <CaseStudyCard caseStudy={caseStudy} />
          ))}
        </div>

        {allCaseStudies.length === 0 && (
          <div class="text-center py-12">
            <p class="text-gray-500 text-lg">More case studies coming soon.</p>
          </div>
        )}
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-b from-gray-50 to-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">
          Want results like these?
        </h2>
        <p class="text-xl text-gray-600 mb-8">
          Book a free 30-minute discovery call to discuss your project.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/en/booking"
            class="inline-flex items-center px-8 py-4 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors"
          >
            Book Discovery Call
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </a>
          <a
            href="/en/packages"
            class="inline-flex items-center px-8 py-4 bg-white border-2 border-primary-600 text-primary-600 font-semibold rounded-lg hover:bg-primary-50 transition-colors"
          >
            View Service Packages
            <svg class="ml-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </section>

  </main>

  <Footer />
</Layout>
