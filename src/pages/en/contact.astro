---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Layout title="Contact - Leone Consulting" description="Contact us to discuss your project. We are ready to help you transform your ideas into reality.">
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-20 px-6 bg-gradient-to-br from-primary-50 to-white">
      <div class="container mx-auto">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">Contact Us</h1>
          <p class="text-xl text-gray-600 leading-relaxed">
            Have a project in mind or simply want to chat? 
            Fill out the form or write to us directly.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="py-20 px-6">
      <div class="container mx-auto">
        <div class="max-w-6xl mx-auto">
          <div class="grid md:grid-cols-2 gap-12">
            <!-- Contact Info -->
            <div>
              <h2 class="text-3xl font-bold text-gray-900 mb-8">Contact Information</h2>
              
              <div class="space-y-6 mb-12">
                <div class="flex items-start space-x-4">
                  <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-bold text-gray-900 mb-1">Email</h3>
                    <a href="mailto:info@leoneconsulting.dev" class="text-primary-600 hover:text-primary-700 transition-colors">
                      info@leoneconsulting.dev
                    </a>
                  </div>
                </div>

                <div class="flex items-start space-x-4">
                  <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-bold text-gray-900 mb-1">Website</h3>
                    <p class="text-gray-600">leoneconsulting.dev</p>
                  </div>
                </div>

                <div class="flex items-start space-x-4">
                  <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <div>
                    <h3 class="font-bold text-gray-900 mb-1">Availability</h3>
                    <p class="text-gray-600">Mon - Fri: 9:00 AM - 6:00 PM</p>
                    <p class="text-gray-600 text-sm">Response within 24 hours</p>
                  </div>
                </div>
              </div>

              <div class="bg-primary-50 p-6 rounded-xl">
                <h3 class="text-xl font-bold text-gray-900 mb-4">Free Consultation</h3>
                <p class="text-gray-600 mb-4">
                  We offer a free 30-minute initial consultation to discuss your project 
                  and evaluate the best solutions together.
                </p>
                <p class="text-gray-600">
                  No commitment required, just an opportunity to get to know each other and see if we can help you.
                </p>
              </div>
            </div>

            <!-- Contact Form -->
            <div class="bg-white p-8 rounded-xl shadow-lg">
              <h2 class="text-3xl font-bold text-gray-900 mb-8">Send a Message</h2>
              
              <form id="contact-form" class="space-y-6">
                <div>
                  <label for="name" class="block text-sm font-semibold text-gray-900 mb-2">
                    Name *
                  </label>
                  <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
                    placeholder="Your name"
                  />
                </div>

                <div>
                  <label for="email" class="block text-sm font-semibold text-gray-900 mb-2">
                    Email *
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
                    placeholder="your.email@example.com"
                  />
                </div>

                <div>
                  <label for="company" class="block text-sm font-semibold text-gray-900 mb-2">
                    Company
                  </label>
                  <input
                    type="text"
                    id="company"
                    name="company"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
                    placeholder="Company name (optional)"
                  />
                </div>

                <div>
                  <label for="service" class="block text-sm font-semibold text-gray-900 mb-2">
                    Service of Interest
                  </label>
                  <select
                    id="service"
                    name="service"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all"
                  >
                    <option value="">Select a service</option>
                    <option value="ai">AI Engineering</option>
                    <option value="development">Software Development</option>
                    <option value="consulting">IT Consulting</option>
                    <option value="other">Other</option>
                  </select>
                </div>

                <div>
                  <label for="message" class="block text-sm font-semibold text-gray-900 mb-2">
                    Message *
                  </label>
                  <textarea
                    id="message"
                    name="message"
                    required
                    rows="6"
                    class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all resize-none"
                    placeholder="Tell us about your project..."
                  ></textarea>
                </div>

                <div class="flex items-start">
                  <input
                    type="checkbox"
                    id="privacy"
                    name="privacy"
                    required
                    class="w-4 h-4 text-primary-600 border-gray-300 rounded focus:ring-primary-500 mt-1"
                  />
                  <label for="privacy" class="ml-3 text-sm text-gray-600">
                    I consent to the processing of my personal data according to the privacy policy *
                  </label>
                </div>

                <button
                  type="submit"
                  class="w-full px-8 py-4 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-all transform hover:scale-105 font-semibold shadow-lg"
                >
                  Send Message
                </button>

                <!-- Success/Error Messages -->
                <div id="form-message" class="hidden p-4 rounded-lg"></div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="py-20 px-6 bg-gray-50">
      <div class="container mx-auto">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-4xl font-bold text-gray-900 mb-12 text-center">Frequently Asked Questions</h2>
          
          <div class="space-y-6">
            <div class="bg-white p-6 rounded-xl shadow-md">
              <h3 class="text-xl font-bold text-gray-900 mb-3">What are the response times?</h3>
              <p class="text-gray-600">
                We commit to responding to all requests within 24 business hours. 
                For urgent matters, feel free to specify it in the message.
              </p>
            </div>

            <div class="bg-white p-6 rounded-xl shadow-md">
              <h3 class="text-xl font-bold text-gray-900 mb-3">How does the free consultation work?</h3>
              <p class="text-gray-600">
                The free consultation is a 30-minute call where we discuss your project, 
                your needs and evaluate possible solutions together. No commitment required.
              </p>
            </div>

            <div class="bg-white p-6 rounded-xl shadow-md">
              <h3 class="text-xl font-bold text-gray-900 mb-3">Do you also work on small projects?</h3>
              <p class="text-gray-600">
                Yes, we work on projects of any size. Whether you need a few hours of consulting 
                or a complex multi-month project, we are here to help you.
              </p>
            </div>

            <div class="bg-white p-6 rounded-xl shadow-md">
              <h3 class="text-xl font-bold text-gray-900 mb-3">Do you offer post-project support?</h3>
              <p class="text-gray-600">
                Absolutely yes. We offer customized support and maintenance packages 
                to ensure the optimal functioning of the solutions we develop.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const messageDiv = document.getElementById('form-message');

  function sanitizeInput(input: string): string {
    const div = document.createElement('div');
    div.textContent = input;
    return div.innerHTML;
  }

  let submissionCount = 0;
  let lastSubmissionTime = 0;
  const MAX_SUBMISSIONS = 3;
  const RATE_LIMIT_WINDOW = 60000;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const now = Date.now();
    if (now - lastSubmissionTime > RATE_LIMIT_WINDOW) {
      submissionCount = 0;
    }
    
    if (submissionCount >= MAX_SUBMISSIONS) {
      messageDiv?.classList.remove('hidden', 'bg-green-100', 'text-green-800');
      messageDiv?.classList.add('bg-red-100', 'text-red-800');
      messageDiv!.textContent = 'Too many attempts. Please wait one minute before trying again.';
      return;
    }
    
    // Show loading state
    const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
    const originalText = submitButton.textContent;
    submitButton.textContent = 'Sending...';
    submitButton.disabled = true;

    const formData = new FormData(form);
    const sanitizedData = {
      name: sanitizeInput(formData.get('name') as string),
      email: sanitizeInput(formData.get('email') as string),
      company: sanitizeInput(formData.get('company') as string || ''),
      service: sanitizeInput(formData.get('service') as string || ''),
      message: sanitizeInput(formData.get('message') as string)
    };

    if (!sanitizedData.email.match(/^[^\s@]+@[^\s@]+\.[^\s@]+$/)) {
      messageDiv?.classList.remove('hidden', 'bg-green-100', 'text-green-800');
      messageDiv?.classList.add('bg-red-100', 'text-red-800');
      messageDiv!.textContent = 'Invalid email address.';
      submitButton.textContent = originalText;
      submitButton.disabled = false;
      return;
    }
    
    submissionCount++;
    lastSubmissionTime = now;
    
    try {
      const response = await fetch('/api/contact', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(sanitizedData)
      });

      if (!response.ok) {
        const errorData = await response.json().catch(() => ({}));
        console.error('API Error:', response.status, errorData);
        throw new Error(errorData.error || 'Failed to send email');
      }

      messageDiv?.classList.remove('hidden', 'bg-red-100', 'text-red-800');
      messageDiv?.classList.add('bg-green-100', 'text-green-800');
      messageDiv!.textContent = 'Message sent successfully! We will reply soon.';
      
      form.reset();

      // Hide message after 5 seconds
      setTimeout(() => {
        messageDiv?.classList.add('hidden');
      }, 5000);
    } catch (error) {
      console.error('Form submission error:', error);
      messageDiv?.classList.remove('hidden', 'bg-green-100', 'text-green-800');
      messageDiv?.classList.add('bg-red-100', 'text-red-800');
      messageDiv!.textContent = 'Error sending message. Please try again later.';
    } finally {
      submitButton.textContent = originalText;
      submitButton.disabled = false;
    }
  });
</script>
