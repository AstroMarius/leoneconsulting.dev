---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<Layout title="Services - Leone Consulting" description="Discover our services: AI Engineering, software development and IT consulting to transform your business.">
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="pt-32 pb-20 px-6 bg-gradient-to-br from-primary-50 to-white">
      <div class="container mx-auto">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-5xl md:text-6xl font-bold text-gray-900 mb-6">Our Services</h1>
          <p class="text-xl text-gray-600 leading-relaxed">
            Complete technological solutions to bring your company into the digital future
          </p>
        </div>
      </div>
    </section>

    <!-- AI Engineering -->
    <section id="ai" class="py-20 px-6">
      <div class="container mx-auto">
        <div class="max-w-6xl mx-auto">
          <div class="grid md:grid-cols-2 gap-12 items-center">
            <div>
              <div class="w-16 h-16 bg-primary-100 rounded-lg flex items-center justify-center mb-6">
                <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
              </div>
              <h2 class="text-4xl font-bold text-gray-900 mb-6">AI Engineering</h2>
              <p class="text-lg text-gray-600 mb-6 leading-relaxed">
                We develop advanced artificial intelligence systems to automate processes, 
                improve business decisions and create innovative user experiences.
              </p>
              <p class="text-gray-600 mb-6">
                Our AI solutions are designed to fit your specific needs, 
                integrating seamlessly with your existing systems.
              </p>
            </div>
            <div class="bg-white p-8 rounded-xl shadow-lg">
              <h3 class="text-xl font-bold text-gray-900 mb-6">What we offer:</h3>
              <ul class="space-y-4">
                <li class="flex items-start">
                  <svg class="w-6 h-6 text-primary-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <div>
                    <strong class="text-gray-900">Machine Learning & Deep Learning</strong>
                    <p class="text-gray-600 text-sm">Predictive models and personalized recommendation systems</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <svg class="w-6 h-6 text-primary-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <div>
                    <strong class="text-gray-900">Natural Language Processing</strong>
                    <p class="text-gray-600 text-sm">Text analysis, intelligent chatbots and virtual assistants</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <svg class="w-6 h-6 text-primary-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <div>
                    <strong class="text-gray-900">Computer Vision</strong>
                    <p class="text-gray-600 text-sm">Image recognition and video analysis</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <svg class="w-6 h-6 text-primary-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <div>
                    <strong class="text-gray-900">LLM Integration</strong>
                    <p class="text-gray-600 text-sm">Integration of Large Language Models in your applications</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <svg class="w-6 h-6 text-primary-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <div>
                    <strong class="text-gray-900">MLOps & Deployment</strong>
                    <p class="text-gray-600 text-sm">CI/CD pipelines for ML models and production monitoring</p>
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Software Development -->
    <section id="development" class="py-20 px-6 bg-gray-50">
      <div class="container mx-auto">
        <div class="max-w-6xl mx-auto">
          <div class="grid md:grid-cols-2 gap-12 items-center">
            <div class="order-2 md:order-1 bg-white p-8 rounded-xl shadow-lg">
              <h3 class="text-xl font-bold text-gray-900 mb-6">What we offer:</h3>
              <ul class="space-y-4">
                <li class="flex items-start">
                  <svg class="w-6 h-6 text-primary-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <div>
                    <strong class="text-gray-900">Web Applications</strong>
                    <p class="text-gray-600 text-sm">SPA, PWA and modern web apps with React, Vue, Astro</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <svg class="w-6 h-6 text-primary-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <div>
                    <strong class="text-gray-900">API & Backend</strong>
                    <p class="text-gray-600 text-sm">RESTful API, GraphQL, microservices with Node.js, Python, FastAPI</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <svg class="w-6 h-6 text-primary-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <div>
                    <strong class="text-gray-900">Database Design</strong>
                    <p class="text-gray-600 text-sm">PostgreSQL, MySQL, MongoDB, Redis - schema design and optimization</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <svg class="w-6 h-6 text-primary-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <div>
                    <strong class="text-gray-900">Cloud Native</strong>
                    <p class="text-gray-600 text-sm">Scalable applications on AWS, Azure, GCP</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <svg class="w-6 h-6 text-primary-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <div>
                    <strong class="text-gray-900">Mobile Development</strong>
                    <p class="text-gray-600 text-sm">Native and cross-platform apps with React Native</p>
                  </div>
                </li>
              </ul>
            </div>
            <div class="order-1 md:order-2">
              <div class="w-16 h-16 bg-primary-100 rounded-lg flex items-center justify-center mb-6">
                <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                </svg>
              </div>
              <h2 class="text-4xl font-bold text-gray-900 mb-6">Software Development</h2>
              <p class="text-lg text-gray-600 mb-6 leading-relaxed">
                We create custom software using the most modern technologies and development 
                best practices to ensure clean, scalable and maintainable code.
              </p>
              <p class="text-gray-600 mb-6">
                From design to implementation to deployment, we follow your project 
                through every phase with agile methodologies and transparent communication.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- IT Consulting -->
    <section id="consulting" class="py-20 px-6">
      <div class="container mx-auto">
        <div class="max-w-6xl mx-auto">
          <div class="grid md:grid-cols-2 gap-12 items-center">
            <div>
              <div class="w-16 h-16 bg-primary-100 rounded-lg flex items-center justify-center mb-6">
                <svg class="w-8 h-8 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              </div>
              <h2 class="text-4xl font-bold text-gray-900 mb-6">IT Consulting</h2>
              <p class="text-lg text-gray-600 mb-6 leading-relaxed">
                We offer strategic and technical consulting to help you make the right decisions 
                and guide your business towards technological success.
              </p>
              <p class="text-gray-600 mb-6">
                We analyze your context, identify improvement opportunities and 
                define clear and achievable technology roadmaps.
              </p>
            </div>
            <div class="bg-white p-8 rounded-xl shadow-lg">
              <h3 class="text-xl font-bold text-gray-900 mb-6">What we offer:</h3>
              <ul class="space-y-4">
                <li class="flex items-start">
                  <svg class="w-6 h-6 text-primary-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <div>
                    <strong class="text-gray-900">Software Architecture</strong>
                    <p class="text-gray-600 text-sm">Design of scalable and maintainable systems</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <svg class="w-6 h-6 text-primary-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <div>
                    <strong class="text-gray-900">Code Review & Refactoring</strong>
                    <p class="text-gray-600 text-sm">Code analysis and quality improvement</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <svg class="w-6 h-6 text-primary-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <div>
                    <strong class="text-gray-900">Technical Due Diligence</strong>
                    <p class="text-gray-600 text-sm">Technical assessment for M&A and investments</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <svg class="w-6 h-6 text-primary-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <div>
                    <strong class="text-gray-900">DevOps & CI/CD</strong>
                    <p class="text-gray-600 text-sm">Automation, deployment and infrastructure as code</p>
                  </div>
                </li>
                <li class="flex items-start">
                  <svg class="w-6 h-6 text-primary-600 mr-3 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  <div>
                    <strong class="text-gray-900">Technology Strategy</strong>
                    <p class="text-gray-600 text-sm">Technology roadmap and technology selection</p>
                  </div>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Process -->
    <section class="py-20 px-6 bg-gray-50">
      <div class="container mx-auto">
        <div class="max-w-4xl mx-auto text-center mb-16">
          <h2 class="text-4xl font-bold text-gray-900 mb-6">Our Process</h2>
          <p class="text-xl text-gray-600">
            A structured approach to ensure your project's success
          </p>
        </div>

        <div class="grid md:grid-cols-4 gap-8 max-w-6xl mx-auto">
          <div class="text-center">
            <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-4 text-white text-2xl font-bold">
              1
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">Analysis</h3>
            <p class="text-gray-600">
              We understand your needs and define clear objectives
            </p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-4 text-white text-2xl font-bold">
              2
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">Design</h3>
            <p class="text-gray-600">
              We create the optimal architecture and development plan
            </p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-4 text-white text-2xl font-bold">
              3
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">Development</h3>
            <p class="text-gray-600">
              We implement the solution with agile methodologies
            </p>
          </div>

          <div class="text-center">
            <div class="w-16 h-16 bg-primary-600 rounded-full flex items-center justify-center mx-auto mb-4 text-white text-2xl font-bold">
              4
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">Deploy & Support</h3>
            <p class="text-gray-600">
              We release to production and provide ongoing support
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 px-6 bg-primary-600 text-white">
      <div class="container mx-auto text-center">
        <h2 class="text-4xl font-bold mb-6">Have a project in mind?</h2>
        <p class="text-xl mb-8 text-primary-100 max-w-2xl mx-auto">
          Contact us for a free consultation and discover how we can help you realize it.
        </p>
        <a 
          href="/en/contact" 
          class="inline-block px-8 py-4 bg-white text-primary-600 rounded-lg hover:bg-gray-100 transition-all transform hover:scale-105 font-semibold shadow-lg"
        >
          Request a Consultation
        </a>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
