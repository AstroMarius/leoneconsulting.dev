---
import LanguagePicker from './LanguagePicker.astro';
import { getLangFromUrl, useTranslations } from '../i18n/translations';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentPath = Astro.url.pathname;

// Create language-aware paths
const basePath = lang === 'en' ? '/en' : '';
---

<header class="fixed w-full top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-200">
  <nav class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <a href={basePath || '/'} class="flex items-center space-x-3 hover:opacity-80 transition-opacity">
        <img src="/logo.png" alt="Leone Consulting Logo" class="h-10 w-10" />
        <span class="text-2xl font-bold text-primary-600">Leone Consulting</span>
      </a>
      
      <div class="hidden md:flex items-center space-x-6">
        <a 
          href={basePath || '/'} 
          class={`text-sm font-medium transition-colors ${currentPath === (basePath || '/') ? 'text-primary-600' : 'text-gray-600 hover:text-primary-600'}`}
        >
          {t('nav.home')}
        </a>
        <a 
          href={`${basePath}/about`}
          class={`text-sm font-medium transition-colors ${currentPath === `${basePath}/about` ? 'text-primary-600' : 'text-gray-600 hover:text-primary-600'}`}
        >
          {t('nav.about')}
        </a>
        <a 
          href={`${basePath}/services`}
          class={`text-sm font-medium transition-colors ${currentPath === `${basePath}/services` ? 'text-primary-600' : 'text-gray-600 hover:text-primary-600'}`}
        >
          {t('nav.services')}
        </a>
        <a 
          href={`${basePath}/booking`}
          class={`px-4 py-2 border-2 border-primary-600 text-primary-600 rounded-lg hover:bg-primary-600 hover:text-white transition-all text-sm font-medium ${currentPath === `${basePath}/booking` ? 'bg-primary-600 text-white' : ''}`}
        >
          {t('nav.booking')}
        </a>
        <a 
          href={`${basePath}/portfolio`}
          class={`text-sm font-medium transition-colors ${currentPath === `${basePath}/portfolio` ? 'text-primary-600' : 'text-gray-600 hover:text-primary-600'}`}
        >
          {t('nav.portfolio')}
        </a>
        <a 
          href={`${basePath}/contact`}
          class="px-6 py-2 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors text-sm font-medium"
        >
          {t('nav.contact')}
        </a>
        <LanguagePicker />
      </div>

      <!-- Mobile menu button -->
      <button 
        id="mobile-menu-button"
        class="md:hidden text-gray-600 hover:text-primary-600 transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden pt-4 pb-2">
      <div class="flex flex-col space-y-3">
        <a href={basePath || '/'} class="text-sm font-medium text-gray-600 hover:text-primary-600 transition-colors py-2">{t('nav.home')}</a>
        <a href={`${basePath}/about`} class="text-sm font-medium text-gray-600 hover:text-primary-600 transition-colors py-2">{t('nav.about')}</a>
        <a href={`${basePath}/services`} class="text-sm font-medium text-gray-600 hover:text-primary-600 transition-colors py-2">{t('nav.services')}</a>
        <a href={`${basePath}/booking`} class="text-sm font-medium text-primary-600 hover:text-primary-700 transition-colors py-2 font-semibold">{t('nav.booking')}</a>
        <a href={`${basePath}/portfolio`} class="text-sm font-medium text-gray-600 hover:text-primary-600 transition-colors py-2">{t('nav.portfolio')}</a>
        <a href={`${basePath}/contact`} class="text-sm font-medium text-gray-600 hover:text-primary-600 transition-colors py-2">{t('nav.contact')}</a>
        <div class="pt-3 mt-3 border-t border-gray-200">
          <LanguagePicker isMobile={true} />
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  
  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
