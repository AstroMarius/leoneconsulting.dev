---
import testimonialsData from '../../company/content/testimonials.json';

const testimonials = testimonialsData.testimonials.filter(t => t.featured);
---

<section class="py-24 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-4xl font-bold text-gray-900 mb-4">
        Dicono di Me
      </h2>
      <p class="text-xl text-gray-600">
        Risultati misurabili per chi vuole costruire, non solo parlare
      </p>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-gradient-to-br from-gray-50 to-white rounded-xl p-8 shadow-lg hover:shadow-xl transition-shadow border border-gray-100">
          <!-- Quote -->
          <div class="mb-6">
            <svg class="w-10 h-10 text-primary-400 mb-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
            </svg>
            <p class="text-gray-700 leading-relaxed mb-6">
              "{testimonial.quote}"
            </p>
          </div>

          <!-- Metric Badge -->
          {testimonial.metrics && testimonial.metrics.length > 0 && (
            <div class="mb-6 p-4 bg-primary-50 rounded-lg border border-primary-200">
              <div class="text-sm text-primary-600 font-medium mb-1">
                {testimonial.metrics[0].label}
              </div>
              <div class="text-2xl font-bold text-primary-900">
                {testimonial.metrics[0].value}
              </div>
            </div>
          )}

          <!-- Author -->
          <div class="flex items-center pt-6 border-t border-gray-200">
            <div class="w-12 h-12 rounded-full bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center text-white font-bold text-lg">
              {testimonial.author.name.charAt(0)}
            </div>
            <div class="ml-4">
              <div class="font-semibold text-gray-900">
                {testimonial.author.name}
              </div>
              <div class="text-sm text-gray-600">
                {testimonial.author.role}
              </div>
              <div class="text-sm text-gray-500">
                {testimonial.author.company}
              </div>
            </div>
          </div>

          <!-- Project Link -->
          {testimonial.project && (
            <div class="mt-4 pt-4 border-t border-gray-100">
              <a 
                href="/portfolio"
                class="text-sm text-primary-600 hover:text-primary-700 font-medium inline-flex items-center group"
              >
                Vedi il progetto: {testimonial.project}
                <svg class="ml-1 w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </a>
            </div>
          )}
        </div>
      ))}
    </div>

    <!-- Social Proof Stats -->
    <div class="mt-16 pt-12 border-t border-gray-200">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
        <div>
          <div class="text-4xl font-bold text-primary-600 mb-2">4+</div>
          <div class="text-gray-600">Anni di Esperienza</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-primary-600 mb-2">15+</div>
          <div class="text-gray-600">Progetti Completati</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-primary-600 mb-2">100%</div>
          <div class="text-gray-600">Clienti Soddisfatti</div>
        </div>
      </div>
    </div>
  </div>
</section>
