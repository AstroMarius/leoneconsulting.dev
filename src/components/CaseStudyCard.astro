---
import type { CaseStudy } from '../types/case-study';

interface Props {
  caseStudy: CaseStudy;
  featured?: boolean;
}

const { caseStudy, featured = false } = Astro.props;
const topMetrics = caseStudy.results.metrics.slice(0, 2);

// Determina categoria e stile dal titolo
const getCategory = (title: string) => {
  if (title.includes('Dashboard') || title.includes('KPI')) return { label: 'OPERATIONS', color: 'blue' };
  if (title.includes('AI') || title.includes('Prototipo')) return { label: 'AI/ML', color: 'purple' };
  if (title.includes('Pipeline') || title.includes('Dati')) return { label: 'DATA', color: 'emerald' };
  return { label: 'PROJECT', color: 'gray' };
};

const category = getCategory(caseStudy.title);

// Split titolo in parte principale e sottotitolo
const titleParts = caseStudy.title.split(' per ');
const mainTitle = titleParts[0];
const subtitle = titleParts[1] ? `per ${titleParts[1]}` : '';
---

<article class={`bg-white rounded-xl shadow-md hover:shadow-xl transition-all border border-gray-200 overflow-hidden ${featured ? 'md:col-span-2' : ''}`}>
  <div class="p-6">
    <!-- Badge Categoria -->
    <div class="mb-3">
      <span class={`inline-block text-xs font-semibold tracking-wider uppercase px-2 py-1 rounded
        ${category.color === 'blue' ? 'text-blue-700 bg-blue-50' : ''}
        ${category.color === 'purple' ? 'text-purple-700 bg-purple-50' : ''}
        ${category.color === 'emerald' ? 'text-emerald-700 bg-emerald-50' : ''}
      `}>
        {category.label}
      </span>
    </div>
    
    <!-- Titolo Split -->
    <h3 class="mb-1">
      <span class="block text-2xl font-bold text-gray-900 leading-tight">
        {mainTitle}
      </span>
      {subtitle && (
        <span class="block text-base font-normal text-gray-600 mt-1">
          {subtitle}
        </span>
      )}
    </h3>
    
    <!-- Client Info -->
    <div class="flex items-center gap-2 text-sm text-gray-500 mt-3 mb-4">
      <span>{caseStudy.client}</span>
      <span>â€¢</span>
      <span>{caseStudy.sector}</span>
    </div>
    
    <!-- Metriche Chiave Inline -->
    {topMetrics.length > 0 && (
      <div class="flex flex-wrap gap-3 mb-6 py-3 border-y border-gray-100">
        {topMetrics.map(metric => (
          <span class="text-sm font-semibold text-gray-900">
            {metric.value}
          </span>
        ))}
      </div>
    )}
    
    <!-- CTA -->
    <a 
      href={`/portfolio/${caseStudy.slug}`}
      class="text-sm font-semibold text-primary-600 hover:text-primary-700 inline-flex items-center group"
    >
      Vedi caso completo
      <svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </a>
  </div>
</article>
