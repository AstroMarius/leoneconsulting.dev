---
import { getLangFromUrl, useTranslations } from '../i18n/translations';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();
const basePath = lang === 'en' ? '/en' : '';
---

<footer class="bg-gray-900 text-gray-300">
  <div class="container mx-auto px-6 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="col-span-1 md:col-span-1">
        <h3 class="text-2xl font-bold text-white mb-4">Leone Consulting</h3>
        <p class="text-sm text-gray-400 mb-4">
          {t('footer.description')}
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="text-white font-semibold mb-4">{t('footer.quicklinks')}</h4>
        <ul class="space-y-2 text-sm">
          <li><a href={basePath || '/'} class="hover:text-primary-400 transition-colors">{t('nav.home')}</a></li>
          <li><a href={`${basePath}/about`} class="hover:text-primary-400 transition-colors">{t('nav.about')}</a></li>
          <li><a href={`${basePath}/services`} class="hover:text-primary-400 transition-colors">{t('nav.services')}</a></li>
          <li><a href="https://portfolio.leoneconsulting.dev" target="_blank" rel="noopener noreferrer" class="hover:text-primary-400 transition-colors">{t('nav.portfolio')}</a></li>
          <li><a href={`${basePath}/contact`} class="hover:text-primary-400 transition-colors">{t('nav.contact')}</a></li>
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h4 class="text-white font-semibold mb-4">{t('footer.legal')}</h4>
        <ul class="space-y-2 text-sm">
          <li><a href={`${basePath}/privacy`} class="hover:text-primary-400 transition-colors">{t('footer.privacy')}</a></li>
          <li><a href={`${basePath}/terms`} class="hover:text-primary-400 transition-colors">{t('footer.terms')}</a></li>
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h4 class="text-white font-semibold mb-4">{t('footer.contact')}</h4>
        <ul class="space-y-2 text-sm">
          <li class="flex items-center space-x-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href="mailto:info@leoneconsulting.dev" class="hover:text-primary-400 transition-colors">info@leoneconsulting.dev</a>
          </li>
          <li class="flex items-center space-x-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <a href="tel:+41784067644" class="hover:text-primary-400 transition-colors">+41 78 406 76 44</a>
          </li>
          <li class="flex items-center space-x-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
            </svg>
            <span>leoneconsulting.dev</span>
          </li>
        </ul>
      </div>
    </div>

    <div class="border-t border-gray-800 mt-8 pt-8 text-center text-sm text-gray-400">
      <p>&copy; {currentYear} Leone Consulting. {t('footer.rights')}</p>
    </div>
  </div>
</footer>
