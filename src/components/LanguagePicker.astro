---
import { languages } from '../i18n/translations';

interface Props {
  isMobile?: boolean;
}

const { isMobile = false } = Astro.props;
const currentPath = Astro.url.pathname;
const currentLang = currentPath.startsWith('/en') ? 'en' : 'it';

const buttonId = isMobile ? 'lang-switcher-mobile' : 'lang-switcher';
const menuId = isMobile ? 'lang-menu-mobile' : 'lang-menu';

const italianToEnglishPathMap: Record<string, string> = {
  '/': '/en',
  '/about': '/en/about',
  '/audit-asincrono': '/en/async-audit',
  '/booking': '/en/booking',
  '/contact': '/en/contact',
  '/pacchetti': '/en/packages',
  '/per-chi-non-sono': '/en/not-for-you',
  '/portfolio': '/en/portfolio',
  '/prenota': '/en/book-call',
  '/privacy': '/en/privacy',
  '/services': '/en/services',
  '/terms': '/en/terms',
};

const englishToItalianPathMap: Record<string, string> = {
  '/en': '/',
  '/en/about': '/about',
  '/en/async-audit': '/audit-asincrono',
  '/en/booking': '/booking',
  '/en/contact': '/contact',
  '/en/packages': '/pacchetti',
  '/en/not-for-you': '/per-chi-non-sono',
  '/en/portfolio': '/portfolio',
  '/en/book-call': '/prenota',
  '/en/privacy': '/privacy',
  '/en/services': '/services',
  '/en/terms': '/terms',
};

function getAlternatePath(lang: string) {
  if (lang === 'it') {
    if (englishToItalianPathMap[currentPath]) {
      return englishToItalianPathMap[currentPath];
    }
    // Remove /en prefix
    return currentPath.replace(/^\/en/, '') || '/';
  } else {
    if (italianToEnglishPathMap[currentPath]) {
      return italianToEnglishPathMap[currentPath];
    }
    // Add /en prefix
    if (currentPath === '/') return '/en';
    if (currentPath.startsWith('/en')) return currentPath;
    return `/en${currentPath}`;
  }
}
---

<div class="relative inline-block" data-lang-picker>
  <button
    id={buttonId}
    data-button-id={buttonId}
    data-menu-id={menuId}
    class="flex items-center space-x-2 px-3 py-2 text-sm font-medium text-gray-600 hover:text-primary-600 transition-colors rounded-lg hover:bg-gray-50"
    aria-label="Change language"
  >
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
    </svg>
    <span class="uppercase">{currentLang}</span>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
    </svg>
  </button>

  <div
    id={menuId}
    class="hidden absolute right-0 mt-2 w-40 bg-white rounded-lg shadow-lg border border-gray-200 py-1 z-50"
  >
    {Object.entries(languages).map(([code, name]) => (
      <a
        href={getAlternatePath(code)}
        class={`block px-4 py-2 text-sm hover:bg-primary-50 transition-colors ${
          currentLang === code ? 'text-primary-600 font-semibold' : 'text-gray-700'
        }`}
      >
        {name}
      </a>
    ))}
  </div>
</div>

<script>
  document.querySelectorAll('[data-lang-picker]').forEach((picker) => {
    const button = picker.querySelector('button[data-button-id]') as HTMLButtonElement;
    if (!button) return;
    
    const buttonId = button.dataset.buttonId;
    const menuId = button.dataset.menuId;
    if (!buttonId || !menuId) return;
    
    const menu = document.getElementById(menuId);
    if (!menu) return;
    
    button.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });

    document.addEventListener('click', (e) => {
      const target = e.target as Node;
      if (!button.contains(target) && !menu.contains(target)) {
        menu.classList.add('hidden');
      }
    });
  });
</script>
