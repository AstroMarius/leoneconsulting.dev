---
import type { Package } from '../types/package';

interface Props {
  package: Package;
}

const { package: pkg } = Astro.props;
const topBullets = pkg.forWhom.bullets.slice(0, 3);
---

<article class="bg-white p-8 rounded-xl shadow-lg hover:shadow-2xl transition-all transform hover:-translate-y-1 border border-gray-100 flex flex-col">
  <div class="mb-6">
    <h3 class="text-2xl font-bold text-gray-900 mb-2">
      {pkg.title}
    </h3>
    <p class="text-gray-600 text-sm leading-relaxed">
      {pkg.tagline}
    </p>
  </div>
  
  <div class="mb-6">
    <div class="flex items-baseline gap-2">
      {pkg.price ? (
        <>
          <span class="text-3xl font-bold text-primary-600">{pkg.price.display}</span>
          {pkg.price.currency && (
            <span class="text-sm text-gray-500"></span>
          )}
        </>
      ) : (
        <span class="text-2xl font-bold text-primary-600">Su richiesta</span>
      )}
    </div>
    <p class="text-sm text-gray-500 mt-1">{pkg.timeline.duration}</p>
  </div>
  
  <div class="mb-6 flex-grow">
    <h4 class="text-sm font-semibold text-gray-900 mb-3 uppercase tracking-wide">
      {pkg.forWhom.title}
    </h4>
    <ul class="space-y-2">
      {topBullets.map(bullet => (
        <li class="flex items-start gap-2 text-gray-600 text-sm">
          <svg class="w-5 h-5 text-primary-600 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <span>{bullet}</span>
        </li>
      ))}
    </ul>
  </div>
  
  <div class="space-y-3">
    <a 
      href={pkg.cta.url}
      class="block w-full px-6 py-3 bg-primary-600 text-white text-center rounded-lg hover:bg-primary-700 transition-all transform hover:scale-105 font-semibold shadow-lg"
    >
      {pkg.cta.text}
    </a>
    <a 
      href={`/pacchetti#${pkg.slug}`}
      class="block w-full px-6 py-3 bg-white text-primary-600 text-center border-2 border-primary-600 rounded-lg hover:bg-primary-50 transition-all font-semibold"
    >
      Maggiori dettagli
    </a>
  </div>
</article>
